{{#partial "content"}}
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/teams/new">Add Team</a></li>
                <li><a href="/members/new">Add Member</a></li>
            </ul>
        </div>
    </nav>
    <div class="row well">
        <div class="col-md-6">
            <h1>CURRENT TEAMS:</h1>
            {{#if teams}}
                <ol>
                {{#each teams}}
                    <li><a href="/teams/{{id}}" class="team-list">{{name}}</a></li>
                {{/each}}
                </ol>
            {{else}}
                <p>No team listed yet!</p>
            {{/if}}
        </div>
        <div class="col-md-6">
            <p class ="btn btn-success btn-lg"><a href="/teams/new">Add Team</a></p>
            <p class ="btn btn-danger btn-lg"><a href="/teams/reset">Reset</a></p>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}