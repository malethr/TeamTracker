{{#partial "content"}}
    <div class="well">
        <h3>Team: {{team.name}}</h3>
        <h4>Members:</h4>
            {{#if members}}
                {{#each members}}
                    <li>{{member.name}}</li>
                {{/each}}
                    <p class ="btn btn-success btn-lg"><a href="/members/new">Add another Member</a></p>
                {{else}}
        <p>No member listed yet!</p>
        <p class ="btn btn-success btn-md"><a href="/members/new">Add Member</a></p>
            {{/if}}
        <p class ="btn btn-primary btn-md"><a href="/">Go Back</a></p>
    </div>
{{/partial}}

{{> layout.hbs}}

